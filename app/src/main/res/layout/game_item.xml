<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/cardViewExercise"
                                    >

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
                android:id="@+id/game_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Game date"
                android:textSize="14sp"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <ImageView
                    android:id="@+id/home_team_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="5dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:maxHeight="250dp"/>

            <LinearLayout
                    android:id="@+id/home_team_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/home_team_logo"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/home_team_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City"/>
                <TextView
                        android:id="@+id/home_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"/>
            </LinearLayout>

            <TextView
                    android:id="@+id/score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Home score - Away score"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            <LinearLayout
                    android:id="@+id/away_team_linear_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/away_team_logo"
                    android:orientation="vertical"
                    android:layout_centerInParent="true">
                <TextView
                        android:id="@+id/away_team_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="City"/>
                <TextView
                        android:id="@+id/away_team_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Name"/>
            </LinearLayout>

            <ImageView
                    android:id="@+id/away_team_logo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="5dp"
                    android:scaleType="centerCrop"
                    android:maxHeight="250dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
