<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/upcoming_games_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.UpcomingGamesFragment">

    <TextView android:id="@+id/upcoming_games_no_teams_followed"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true"
              android:text="You don't track any team. Track some now!"
              android:clickable="true"
              android:onClick="textViewOnClick"
              android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/upcomingGamesRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

</RelativeLayout>